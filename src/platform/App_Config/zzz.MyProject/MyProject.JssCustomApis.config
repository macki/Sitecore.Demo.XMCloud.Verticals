<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/" xmlns:set="http://www.sitecore.net/xmlconfig/set/">
	<sitecore>
		<javaScriptServices>
			<viewEngine>
				<allowedApiPaths>
					<!-- Allow your custom login controller path -->
					<path hint="allowLoginVirtualLogin">/api/login/VirtualLogin</path>
					<!-- If you have other custom actions, allow them too -->
					<path hint="allowMyAction">/api/my/MyAction</path>
				</allowedApiPaths>
			</viewEngine>
		</javaScriptServices>
	</sitecore>
</configuration>